public static int viralAdvertising(int n) {
        
        int sus = 5;
        int num = 0,num1 = 0;
        
        while(num < n){
            
            int sum = sus/2;
            num1 = num1 + sum;
            sus = sum*3;
            
            num++;
        }
        
        return num1;
    }
