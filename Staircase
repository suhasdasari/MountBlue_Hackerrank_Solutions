public static void staircase(int n) {
        
        int i,j,k;
        
        for(i=0; i<n ;i++){
            
            for(j=0; j<n-1-i ; j++){
                System.out.print(" ");
            }
            for(k=0; k<=i; k++){
                System.out.print("#");
            }
            System.out.println();
        }
        
        
    }
