public static long marcsCakewalk(List<Integer> calorie) {
        
        Collections.sort(calorie,Collections.reverseOrder());
        
        long sum =0;
        
        for(int i=0; i<calorie.size(); i++){
            
            sum = sum + ((long)Math.pow(2,i)*calorie.get(i));
            
        }
        
        return sum;
        
    }
