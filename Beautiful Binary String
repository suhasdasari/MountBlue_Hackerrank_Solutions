public static int beautifulBinaryString(String b) {
        
        int count =0,i=0;
        
        while(i<=b.length()-3){
            if(b.charAt(i)=='0' && b.charAt(i+1)=='1' && b.charAt(i+2)=='0'){
                i=i+3;
                count++;
            }else{
                i++;
            }
        }
        
        return count;
        
    }
