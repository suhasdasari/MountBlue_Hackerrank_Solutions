public static int designerPdfViewer(List<Integer> h, String word) {
        
        int sum=0;
        for(int i=0; i<word.length(); i++){
            int num = (int) word.charAt(i) - 97;
            int val = h.get(num);
            
            if(val>sum){
                sum = val;
            }
        }
        
        int area = sum * word.length();
        
        return area;
    }
